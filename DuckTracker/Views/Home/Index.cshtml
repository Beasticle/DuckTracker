@model IEnumerable<DuckTracker.Data.Entities.Duck>
@using DuckTracker.Data.Entities

@{
    ViewData["Title"] = "Home Page";
}


<div class="text-center">
    <h1 class="display-4">Welcome to Duck Tracker</h1>
    <p>This webapp will track all the ducks around the offce. You can also input new ducks you find!.</p>
</div>

<div class="row justify-content-center">
    <div class="col-auto" >
        <table class="table table-responsive jumbotron" style="color: white; background-color: rgba(0,0,0,.4)">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Location)
                    </th>
                    <!--<th>
        Action
    </th>-->
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Location)
                    </td>
                    <!--<td class="btn-group-sm">
        <a class="btn-sm btn-outline-primary" style="color: white" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
        <a class="btn-sm btn-outline-danger" style="color: white" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
    </td>-->

                </tr>
                }
                <tr>
                    <td>
                        <a asp-controller="DuckPage" asp-action="AddDuck" class="btn btn-primary">Add a duck!</a>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>