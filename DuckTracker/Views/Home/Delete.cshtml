@model DuckTracker.Data.Entities.Duck
@using DuckTracker.Data.Entities
@{
    ViewData["Title"] = "Delete";
}


<h1 class="text-center alert-danger">Are you sure you want to delete @Model.Name?</h1>

<div class="row justify-content-center">
    <div class="col-auto">
        <form asp-action="Delete">
            @Html.ValidationSummary(false)
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name">Name</label>
                <input class="form-control" asp-for="Name" readonly />
            </div>
            <div class="form-group">
                <label asp-for="Location">Location</label>
                <input class="form-control" asp-for="Location" readonly />
            </div>
            <!--<p class="font-weight-bold">@Model.Name the duck</p>-->
        
            <!--<p class="font-weight-bold">@Model.Location</p>-->

            <input class="btn btn-danger" type="submit" value="Delete @Model.Name"/>
            <a asp-action="Index" class="btn btn-primary">Cancel</a>
        </form>
    </div>
</div>

