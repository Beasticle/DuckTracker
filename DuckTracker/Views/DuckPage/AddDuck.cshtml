@model DuckTracker.Data.Entities.Duck
@using DuckTracker.Data.Entities

@{
    ViewData["Title"] = "Edit";
}

<h1 class="text-center">Found a Duck? Add them here!</h1>
<div class="row justify-content-center">
    <div class="col-auto">
        <form asp-action="addDuck" class="jumbotron" style="color: white; background-color: rgba(0,0,0,.4)">
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name">Name</label>
                <input class="form-control" type="text" asp-for="Name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Location">Location</label>
                <input class="form-control" type="text" asp-for="Location" />
                <span asp-validation-for="Location" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Details">Details</label>
                <input class="form-control" type="text" asp-for="Details" />
                <span asp-validation-for="Details" class="text-danger"></span>
            </div>
            <input class="btn btn-primary" type="submit" />
            <a asp-controller="DuckPage" asp-action="Index" class="btn btn-primary">Cancel</a>
        </form>
    </div>
</div>
